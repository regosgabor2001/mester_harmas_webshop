<!DOCTYPE html>
<html lang="hu">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="icon" href="/App/images/logoTitle.png">
  <link rel="stylesheet" href="App/css/login.css" />
  <title>Mester hármas</title>
</head>

<body>
  <div class="container">
    <div class="forms-container">
      <div class="signin-signup">
        <form action="/login" method="POST" class="sign-in-form">
          <div class="alert alert-danger display-error" style="display:none">
          </div>
          <h2 class="title">Bejelentkezés</h2>
          <div class="input-field">
            <i class="fas fa-user"></i>
            <input type="email" placeholder="Email Cím" name="email" id="email" required />
          </div>
          <div class="input-field">
            <i class="fas fa-lock"></i>
            <input type="password" placeholder="Jelszó" name="password" id="password" required />
          </div>
          <button type="submit" name="signin" id="signin" class="btn solid" />Bejelentkezés</button>
          <p style="display: flex;justify-content: center;align-items: center;"><a href="http://localhost:8000/forgot_passwordPage" style="color: #4590ef;">Elfelejtette jelszavát?</a></p>
          <br>
          <p><a class="visszaFooldalra" href="/products">Vissza a főoldalra.</a></p>
        </form>
        <form action="/register" class="sign-up-form" method="POST">
          <h2 class="title">Regisztráció</h2>
          <div class="input-field">
            <i class="fas fa-user"></i>
            <input type="text" placeholder="Teljes Név" name="signup_full_name" id="signup_full_name" required />
          </div>
          <div class="input-field">
            <i class="fas fa-envelope"></i>
            <input type="email" placeholder="Email Cím" name="signup_email" id="signup_email" required />
          </div>
          <div class="input-field">
            <i class="fas fa-lock"></i>
            <input type="password" placeholder="Jelszó" name="signup_password" id="signup_password" required />
          </div>
          <div class="input-field">
            <i class="fas fa-lock"></i>
            <input type="password" placeholder="Jelszó megerősítése" name="signup_password2" id="signup_password2" required />
            <div class="registrationFormAlert" id="divCheckPasswordMatch"></div>
            <br>
          </div>
          <br>
          <div class="form-check">
            <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault" required>
            <label class="form-check-label" for="flexCheckDefault">
              Elfogadom a feltételeket.
            </label>
          </div>
          <input type="submit" class="btn" name="signup" id="signup" value="Regisztráció" />
          <p><a class="visszaFooldalra" href="/products">Vissza a főoldalra.</a></p>
          
        </form>
      </div>
    </div>

    <div class="panels-container">
      <div class="panel left-panel">
        <div class="content">
          <h3>Új itt?</h3>
          <p>
            Az alábbi gombra kattintva tud regisztrálni.
          </p>
          <button class="btn transparent" id="sign-up-btn">
            Regisztráció
          </button>
        </div>
        <img src="img/log.svg" class="image" alt="" />
      </div>
      <div class="panel right-panel">
        <div class="content">
          <h3>Már van fiókja?</h3>
          <p>
            Az alábbi gombra kattintva tud bejelentkezni.
          </p>
          <button class="btn transparent" id="sign-in-btn">
            Bejelentkezés
          </button>
        </div>
        <img src="img/register.svg" class="image" alt="" />
      </div>
    </div>
  </div>
  <script src='
  https://cdn.jsdelivr.net/npm/sweetalert2@11.7.2/dist/sweetalert2.all.min.js
  '></script>
  <script src='/App/js/jquery-3.6.3.min.js'></script>
  <script>
    function checkPasswordMatch(){
        var password = $("#signup_password").val();
        var confirmPassword = $("#signup_password2").val();
        if (password != confirmPassword){
            $("#divCheckPasswordMatch").html("<p class='text-danger' style='color:red;'>A jelszavak nem egyeznek</p>");
            $("#submit").prop('disabled', true);
        } else {
            $("#divCheckPasswordMatch").html("<p class='text-success' style='color:green;'>A jelszavak egyeznek</p>");
            $("#submit").prop('disabled', false);
        }
    }


    $(document).ready(function() {

    //Ha abbahagyjuk a gépelést valamelyik jelszó mezőn, akkor meghívja az 
    //ellenőrző fv-t
    $("#signup_password").keyup(checkPasswordMatch);
    $("#signup_password2").keyup(checkPasswordMatch);

    //Ha rákattint a gombra, akkor ne az alapértelmezett mukodés legyen (elküldi a szerver felé, hanem aszinkorn hívást végezzünk)
    });

  </script>
  
  <script src="https://kit.fontawesome.com/64d58efce2.js" crossorigin="anonymous"></script>
  <script src="App/js/login.js"></script>
</body>

</html>